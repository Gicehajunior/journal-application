<%- include('crm/partials/header') %>

<div class="dashboard-container">
    <%- include('crm/partials/sidebar') %>

    <div class="main-content">
        <%- include('crm/partials/generalTopbar') %>
        <hr>

        <% if (message && message.length > 0) { %>
            <div class="form-group">
                <div class="alert alert-<%= status && status == 'success' ? 'primary' : 'danger' %>" role="alert">
                    <strong>Alert:</strong> <%= message %>
                </div>
            </div>
        <% } %>
        
        <div class="section-2">
            <h3 class="mb-3">Update Your Account</h3>
            <form id="profile-settings-form" class="profile-settings-form" method="POST" action="/settings/profile/update-profile">
                <div class="mb-3 mt-3">
                    <label for="fullname" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullname" name="fullname" value="<%= user.fullname %>" required>
                </div>
                <div class="mb-3 mt-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
                </div>
                <div class="row mt-3">
                    <div class="mb-3 col-md-6">
                        <label for="email" class="form-label">Email Address</label>
                        <input readonly type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                        <small>Email is a read only. Cannot be edited whatsoever.</small>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="contact" class="form-label">Contact Phone</label>
                        <input type="text" class="form-control" id="contact" name="contact" value="<%= user.contact %>">
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success update-profile-submit-btn" id="updateProfileSubmitBtn">Update Profile</button>
                </div>
            </form>
        </div>
    </div> 
</div>

<!-- scripts -->
<script src="/default/js/src/auth.js?v1"></script> 
<script src="/default/js/src/users.js?v1"></script> 

<%- include('crm/partials/footer') %>
