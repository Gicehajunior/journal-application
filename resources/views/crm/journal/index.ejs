<%- include('crm/partials/header') %>

<div class="dashboard-container">
    <%- include('crm/partials/sidebar') %>

    <div class="main-content">
        <%- include('crm/partials/generalTopbar') %>
        <hr>

        <% if (message) { %>
            <div class="form-group">
                <div class="alert alert-<%= status && status == 'success' ? 'primary' : 'danger' %>" role="alert">
                    <strong>Alert:</strong> <%= message %>
                </div>
            </div>
        <% } %>
        
        <div class="section-2">
            <div class="row mb-3">
                <!-- Button trigger modal -->
                <div class="d-flex justify-content-end">
                    <a type="button" class="btn btn-primary" href="/journal/create">
                        Add journal
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <%- include('crm/partials/others/journals-table') %>
            </div>   
        </div>
    </div> 
</div>

<!-- modal -->
<div class="modal fade preview-journal-modal" id="previewJournalModal" tabindex="-1" aria-labelledby="previewJournalModalLabel" aria-hidden="true"></div>
<!-- /modal -->

<!-- scripts -->
<script src="/default/js/src/auth.js?v1"></script>
<script src="/default/js/src/journal.js?v1"></script>
<!-- /scripts -->

<%- include('crm/partials/footer') %>
