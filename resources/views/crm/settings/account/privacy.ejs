<%- include('crm/partials/header') %>

<div class="dashboard-container">
    <%- include('crm/partials/sidebar') %>

    <div class="main-content">
        <%- include('crm/partials/generalTopbar') %>
        <hr>

        <% if (message && message.length > 0) { %>
            <div class="form-group">
                <div class="alert alert-<%= status && status == 'success' ? 'primary' : 'danger' %>" role="alert">
                    <strong>Alert:</strong> <%= message %>
                </div>
            </div>
        <% } %>
        
        <div class="section-2">
            <h3 class="mb-3">Update Your Password</h3>
            <form id="privacy-settings-form" class="privacy-settings-form" method="POST" action="/settings/privacy/update-privacy">  
                <div class="mb-3">
                    <label for="oldPassword" class="form-label">Old Password</label>
                    <input type="password" class="form-control" id="oldPassword" name="oldPassword">
                </div>
                <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input type="password" class="form-control" id="newPassword" name="newPassword">
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                </div> 
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success update-privacy-submit-btn" id="updatePrivacySubmitBtn">Update Password</button>
                </div>
            </form>
        </div>
    </div> 
</div>

<!-- scripts -->
<script src="/default/js/src/auth.js?v1"></script> 
<script src="/default/js/src/users.js?v1"></script> 

<%- include('crm/partials/footer') %>
